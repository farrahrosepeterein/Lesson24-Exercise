//my vehichle .h file

#include <iostream>
using namespace std;

class CVehicle {
    private: 
    string owner;
    public:
    int numWheels;
    protected:
    string color;

};

//Making the public default constructor
CVehicle() {
    cout<<"Default Constructor of CVehicle called: " << endl; 
    owner = "Not Specified";
    numWheels = -1;
    color = "Not Specified";
    cout<<"Leaving CVehicle Default Constructor" << endl;
}
CVehicle(string newOwner, int numWheels, string newColor) : owner(newOwner), numWheels(newNumWheels), color(newColor) {

}
~CVehicle (){
    cout<<"CVehicle Destructor called. Deleting" << owner<< "'s " << color << " vehicle" << endl;
    return 0;
};




